<div class="nested-fields border p-10 mb-10">
  <div class="form-group">
    <label>Label</label>
    <%= f.text_field :label, class: 'form-control' %>
  </div>
  <div class="form-group mt-5px">
    <label>Type</label>
    <%= f.select :question_type, options_for_select(Question.question_types.map{|key,value|[key,key]}, f.object.question_type), {}, {class:'form-control'}%>
  </div>
  <div class="mt-5px">
    <%= link_to_add_association f, :options,'association-insertion-traversal' => 'closest', 'association-insertion-node' => '.option_fields', "data-association-insertion-method" => "append" , id: "associate_option_fields", :partial => "option_fields", :class => "btn br-5 btn-primary float-left",:render_options => {:locals => { }} do%>
      <span>Add Option</span>
    <%end%>
    <%= link_to_remove_association 'Remove Question', f, class: 'btn btn-danger pull-right' %>
  </div>
  <div class="options_fields">
    <%= f.fields_for :options do |option|%>
      <%= render 'option_fields', f: option %>
    <%end%>
  </div>
</div>